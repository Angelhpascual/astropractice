---
export interface PostIntroCardProps {
  title: string
  summary: string
  status: "Planned" | "In progress" | "Complete"
  eta?: string
}

const { title, summary, status, eta } = Astro.props as PostIntroCardProps;
---

<article
  class="flex flex-col gap-3 rounded-2xl border border-slate-200 bg-white/80 p-6 shadow-sm transition hover:-translate-y-0.5 hover:border-indigo-200 hover:shadow"
>
  <span
    class="inline-flex w-fit items-center gap-2 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-600"
  >
    {status}
    {eta && <span class="text-slate-500">Â· {eta}</span>}
  </span>
  <h3 class="text-xl font-semibold text-slate-900">{title}</h3>
  <p class="text-sm text-slate-600">{summary}</p>
</article>
