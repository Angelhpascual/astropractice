---
export interface NavLink {
  href: string
  label: string
}

const {
  title = "Astro Learning Blog",
  tagline = "Learning Astro one deliberate module at a time.",
  navLinks = [
    { href: "/", label: "Home" },
    { href: "/roadmap", label: "Roadmap" },
    { href: "/notes", label: "Notes" },
  ],
} = Astro.props as {
  title?: string
  tagline?: string
  navLinks?: NavLink[]
}
---

<header
  class="mb-10 flex flex-col gap-6 border-b border-slate-200 pb-8 md:flex-row md:items-center md:justify-between"
>
  <div>
    <p class="text-sm font-semibold uppercase tracking-wide text-indigo-500">
      Learning Journey
    </p>
    <h1 class="text-2xl font-bold text-slate-900">{title}</h1>
    <p class="text-sm text-slate-500">{tagline}</p>
  </div>
  <nav aria-label="Primary">
    <ul
      class="flex flex-wrap items-center gap-4 text-sm font-medium text-slate-600"
    >
      {
        navLinks.map((link) => (
          <li>
            <a
              class="rounded-full px-3 py-1 transition hover:bg-slate-100 hover:text-slate-900"
              href={link.href}
            >
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
